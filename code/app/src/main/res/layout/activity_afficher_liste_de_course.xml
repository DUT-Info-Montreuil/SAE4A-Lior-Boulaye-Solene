<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controleur.AfficherListeDeCourseActivity">

    <ImageButton
        android:id="@+id/imageButton_retour"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/fleche_retour"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="30dp" />

    <ImageButton
        android:id="@+id/imageButton_accueil"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/accueil"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="28dp" />

    <EditText
        android:id="@+id/editText_listeDeCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Liste de course"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="28dp" />

    <ListView
        android:id="@+id/listeView_listeDeCourse"
        android:layout_width="409dp"
        android:layout_height="507dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="118dp" />

    <Button
        android:id="@+id/button_modifierListeDeCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Modifier la liste de course"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="664dp" />
</androidx.constraintlayout.widget.ConstraintLayout>