<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".controleur.InscriptionActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="75dp"
        android:text="Inscription"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/incription_pseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:hint="Entrez votre pseudo"
        android:autofillHints="incription_username"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/incription_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Entrez votre adresse mail"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:id="@+id/incription_mot_de_passe"
        android:layout_marginEnd="16dp"
        android:hint="Entrez votre mot de passe"
        android:inputType="textPassword"
        android:autofillHints="password" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:id="@+id/confirme_mot_de_passe"
        android:layout_marginEnd="16dp"
        android:hint="Entrez votre mot de passe à nouveau"
        android:inputType="textPassword"
        android:autofillHints="password" />

    <Button
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:id="@+id/inscriptionButton"

        android:layout_margin="16dp"

        android:background="@color/purple_200"
        android:gravity="center"
        android:text="S'inscrire"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Déjà inscrit ? "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:id="@+id/lien_activite_connexion"
            android:text="Connectez-vous !"
            />
    </LinearLayout>
</LinearLayout>