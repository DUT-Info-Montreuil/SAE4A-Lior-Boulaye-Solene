<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controleur.EtapeRecetteActivity">

    <ImageButton
        android:id="@+id/imageButton_flecheRetour"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/fleche_retour"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp" />

    <EditText
        android:id="@+id/editText_nomRecette"
        android:layout_width="79dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Recette"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="28dp" />

    <EditText
        android:id="@+id/editText_numEtape"
        android:layout_width="76dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="etape : "
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="28dp" />

    <EditText
        android:id="@+id/editTextNumber_numEtape"
        android:layout_width="91dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/textView_etape"
        android:layout_width="332dp"
        android:layout_height="456dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="98dp" />

    <Button
        android:id="@+id/button_prochaine_etape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Prochaine Etape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="596dp" />

    <Button
        android:id="@+id/button_accueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Accueil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="654dp" />

</androidx.constraintlayout.widget.ConstraintLayout>